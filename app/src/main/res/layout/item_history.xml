<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/space20"
    android:paddingRight="@dimen/space20"
    android:paddingTop="@dimen/space10">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        card_view:cardMaxElevation="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        style="@style/list_card">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/space10"
            android:background="@drawable/gradiennt2">

            <LinearLayout
                android:id="@+id/tvdis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <com.waslnyapp.waslny.customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trip Nmae :"
                    android:textColor="@color/text"
                    android:textSize="15dp"
                    android:gravity="left"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rideLocation"
                    android:textSize="14dp"
                    android:text="rideLocation"
                    android:layout_marginLeft="6dp"
                    android:gravity="left"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
        android:id="@+id/tvrideID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <com.waslnyapp.waslny.customfonts.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip ID :"
            android:textColor="@color/text"
            android:textSize="15dp"
            android:gravity="left"
            android:textAlignment="center"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rideId"
        android:textSize="12dp"
        android:text="rideId"
        android:layout_marginLeft="6dp"
        android:gravity="left"
        android:layout_gravity="center"/>

    </LinearLayout>

            <LinearLayout
        android:id="@+id/tvtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <com.waslnyapp.waslny.customfonts.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Time :"
            android:textColor="@color/text"
            android:textSize="15dp"
            android:gravity="left"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:textSize="13dp"
            android:text="time"
            android:layout_marginLeft="6dp"
            android:gravity="left"
            android:layout_gravity="center"/>

    </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>