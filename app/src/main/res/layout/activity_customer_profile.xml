<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.waslnyapp.waslny.customer.CustomerProfile">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relLayout1">

    <include layout="@layout/usertoolbar"/>

</RelativeLayout>

<LinearLayout
    android:id="@+id/linLayout"
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20sp"
    android:background="@drawable/backgroungprofile"
    >

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@mipmap/ic_default_user"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/changeProfilePhoto"
        android:layout_marginTop="20dp"
        android:id="@+id/reluser">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_username"
            android:layout_centerVertical="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20sp"
            android:background="@null"
            android:inputType="textNoSuggestions"
            android:hint="Username"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/relLayout5"
        android:id="@+id/relLayout6"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_phone"
            android:layout_centerVertical="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20sp"
            android:background="@null"
            android:inputType="number"
            android:hint="Phone Number"/>

    </RelativeLayout>

            <!-- Save Button -->
    <Button
        android:id="@+id/save"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/space10"
        android:layout_marginTop="40dp"
        android:text="save"
        android:background="@drawable/roundedbutton"
        />

</LinearLayout>

</RelativeLayout>